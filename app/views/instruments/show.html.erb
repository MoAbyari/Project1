<h1><%= @instrument.name %></h1>

<p>
  Family: <%= @instrument.family %>
</p>
<p>
  Country: <%= @instrument.country %>
</p>
<p>
  id: <%= @instrument.id %>
</p>

 <%= image_tag @instrument.image, :class => "feature" if @instrument.image.present? %>

 <div class = "controls">
   <%= link_to 'Edit', edit_instrument_path(@instrument.id)%>
   <%= link_to 'Delete', @instrument, :method => 'delete', :data => {:confirm => 'Are you sure ?'}%>
 </div>
