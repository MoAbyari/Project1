<div class="login-container">
  <h1> LOG IN TO YOUR SAMPLEAST ACCOUNT </h1>
  
  <%= form_tag login_path do %>
  
    <div class="form-group">
      <%= label_tag :email  %>
      <%= email_field_tag :email, nil, :class => "form-control" %>
    </div>
  
    <div class="form-group">
      <%= label_tag :password  %>
      <%= password_field_tag :password, nil ,:class => "form-control" %>
    </div>
  
    <%= submit_tag "Login", :class => "btn btn-dark btn-lg btn-block"  %>
  <% end  %>
  
  Don't have an acount? <%=link_to "SIGN UP NOW", new_user_path  %>
</div>
