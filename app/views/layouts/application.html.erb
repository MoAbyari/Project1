<!DOCTYPE html>
<html>
  <head>
    <title>Sampleast</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <div class = 'nav'>
     <nav>
       <%= link_to "Home", root_path %>
       <% if @current_user.present? %>
         <% if @current_user.admin? %>
         ||<%= link_to "Admin*New*Artist", new_artist_path %>
         ||<%= link_to "Admin*Artists", artists_path%>
         ||<%= link_to "Admin*New*Instrument", new_instrument_path %>
         ||<%= link_to "Admin*Instruments", instruments_path%>|
         ||<%= link_to "Admin*New*Sample", new_collection_path %>
         ||<%= link_to "Admin*Samples", collections_path%>|
         <% end %>
         | <%= link_to "Samples ", samples_path %>
         | <%= link_to "Instruments ", samples_instruments_path %>
         | <%= link_to "Artists ", samples_artists_path %>
         | <%= link_to "Log out #{@current_user.email}", login_path, :method => 'delete'%>


       <% else %>
        | <%= link_to "About SamplEast", home_about_path %>
         | <%= link_to "Sign up", new_user_path %>
         | <%= link_to "Log in", login_path %>
       <% end %>
     </nav>
   </div>
   <div class= "container">
        <%= yield %>
   </div>

  </body>
</html>
